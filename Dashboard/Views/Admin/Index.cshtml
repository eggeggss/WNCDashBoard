@section scripts
{

    <script type="text/javascript">
        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }
    </script>

    <script>
        var gridsters = [];
        var currentindex = 0;

        var index = 0;


        function bindSavePanel(){

            $('.btn-edittab').unbind();
            $('.btn-edittab').on('click', function () {

                //
            });
        }

        function btnZoneDel() {
            
            $('.btn-del-zone').unbind();
            $('.btn-del-zone').on('click', function () {
               
                
            });
        }

        function btnZoneAdd() {
           
            $('.btn-add-zoneitem').unbind();
            $('.btn-add-zoneitem').on('click', function () {

                var url = "@Url.Content("~/Admin/GetAddZoneItem")";

                $('.zone-body-add').load(url, function () {
                    
                });
                
            });
        }


        function btnZoneEdit() {
            
            $('.btn-edit-zone').unbind();
            $('.btn-edit-zone').on('click', function () {
                var id = $(this).data('id').replace('rp_','');

                var url = "@Url.Content("~/Admin/GetZoneItem")/" + id;

                $('.zone-body').load(url, function () {
                    
                });             
            });
        }


        function bindPanelEdit() {
            $('.btn-edit').unbind();
            $('.btn-edit').on('click', function (e) {
              
                var title = $(this).data("title");
                
                var group = $(this).data("group");

                $('#panelname').val(title);
                $('#groupname').val(group);
            });
        }

        //Add Panel
        function bindNavLink() {

            $('.nav-link').unbind();

            $('.nav-link').on('click', function () {

                $('.nav-link').removeClass('active');

                $(this).toggleClass('active');

                var target = $(this).data("target");

                $('.mytab').addClass("non-active");

                $('#' + target).removeClass("non-active");

                var id = Number($(this).data('id'));

                $('#currendindex').data('id', id);

                currendindex = id;

            });
        }

        //Remove Zone
        function bindBtnRemove() {

            $('.btn-remove').unbind();

            $('.btn-remove').on('click', function () {

                var obj = $(this).parent('header').parent('li');

                var idx = Number($('#currendindex').data('id'));

                var gridsternow = gridsters[idx];

                gridsternow.remove_widget(obj);

                savePanel();
            });
        }

        //Add Zone
        function addPanel(obj, id) {

            var reportname = obj.find('.reportname').text();
            var x = Number(obj.data('x'));
            var y = Number(obj.data('y'));
            var group = obj.data('group');

            var idx = Number($('#currendindex').data('id'));

            var gridsternow = gridsters[idx];
            var newid = Math.floor(Math.random() * 99999);

            gridsternow.add_widget(
                '<li class="' + group + '"' + ' shadow-lg rounded" data-row="2" data-col="4" data-sizex="3" data-sizey="1">' +
                '<header class="text-center rounded-top"><span class=" m-0 p-0">|||</span><button style="float:right;" ' +
                'class= "btn btn-outline-info btn-sm m-0 p-0 btn-remove" > X</button ></header > <div class="card-body m-0 p-0"> '+
                '<div class="web-content" style="width:80%;float:left;" data-id="a' + id + '" id="a' + newid + '" ></div>' +
                ' <div  class=" m-0 p-0 btn-edit-zone" '+
                      'data-toggle="modal" data-id="'+id+'" data-target="#EditZoneModal"'+
                      ' style = "float:right;" >'+
                '<i class="material-icons text-dark">drag_indicator</i>'+
                '</div >'+
                '</span></li >', x, y);

            bindBtnRemove();
            btnZoneEdit();
            savePanel();
            loadSingleData('a' + id,newid);

            $('.gs-w').css('overflow', 'hidden');

        }


        function loadSingleData(id,newid) {
            var url = "@Url.Content("~/Home/GenReport/")" + id;

            $.get(url, function (e) {

                $('*[data-id="' + id + '"]').html('');
                $('*[data-id="' +  id + '"]').html(e);
               
             });
        }

        function loadData() {

            $('.web-content').each(function (idx, obj) {
                var id = $(this).data('id');
                loadSingleData(id);
            })
        }

        function savePanel() {

            setTimeout(function () {

                var data = $('.user-content').html();
                localStorage.removeItem('positions_backend');
                localStorage.setItem('positions_backend', data);


            }, 1000);

        }

        $(function () {
            $.ajaxSetup({ cache: false });
            var pos = localStorage.getItem('positions_backend');

            if (pos != null) {

                //localStorage.removeItem('positions_backend');

                $('.user-content').html(pos);
            }

            var gridsteritem;

            $('.nav-link').each(function (inx, item) {

                var id = $(this).data('id');

                gridsteritem = $("#demo" + id).gridster({
                    widget_base_dimensions: [100, 100],
                    widget_margins: [3, 3],

                    helper: 'clone',
                    draggable: {
                        drag: function () {
                            savePanel();
                        },
                    },
                    resize: {
                        enabled: true,
                        resize: function () {
                            savePanel();
                        },
                    }
                }).data('gridster');


                gridsters.push(gridsteritem);


            });

            currentindex = Number($('#currendindex').data('id'));

            $('.js-resize-random').on('click', function () {
                gridster.resize_widget(gridster.$widgets.eq(getRandomInt(0, 9)),
                getRandomInt(1, 4), getRandomInt(1, 4))
            });

            $('.report-item').on('click', function () {
                var id = $(this).attr("id");

                addPanel($(this),id);

            });

            bindBtnRemove();

            $(".draggable").draggable({
                revert: "invalid",
                helper: "clone",
                zIndex: 10,

            });

            $("#content").droppable({
                drop: function (event, ui) {
                    var draggable = ui.draggable;
                    var dragged = draggable.clone();
                    var currentID = ui.draggable.attr('id');

                    dragged.resizable();
                    dragged.appendTo("#droppable2");

                    addPanel($('#' + currentID), currentID);

                }
            });

            loadData();

            bindNavLink();

            $('.gs-w').css('overflow', 'hidden');

            $('.nav-link').on('click', function () {

                $('.nav-link').removeClass('active');

                $(this).toggleClass('active');

                var target = $(this).data("target");

                $('.mytab').addClass("non-active");

                $('#' + target).removeClass("non-active");

                var id = Number($(this).data('id'));

                $('#currendindex').data('id', id);

                currendindex = id;

            });

            $('.btn-addtab').on('click', function () {
                var counter=gridsters.length;

                $('.nav-link').removeClass("active");

                var title = $('#panelname1').val();
                
                $('.nav-add').before(
                    "<li class='nav-item'> <a class='nav-link active' data-target='tab-" + counter+"' data-id='" + counter + "' href='#'>" + title+""+
                    "<span class='ml-2 m-0 p-0 btn-edit' style='display:inline;float:right;'  data-title='" + title +"'   data-toggle='modal' data-target='#EditPanelModal' >" +
                    " <i class='material-icons text-dark'>drag_indicator</i>" +
                    "</span>" +
                    " </a>" +
                    "</li >");

                $('.mytab').addClass("non-active");

                $('.tab-content').append(
                    "<div class='mytab  w-100' id='tab-" + counter+"'>"+
                    "<ul class='m-0 p-0' id='demo" + counter+"'></ul></div>"
                );

                var gridsternew = $("#demo" + counter).gridster({
                    widget_base_dimensions: [100, 100],
                    widget_margins: [3, 3],

                    helper: 'clone',
                    draggable: {
                        drag: function () {
                            savePanel();
                        },
                    },
                    resize: {
                        enabled: true,
                        resize: function () {
                            savePanel();
                        },
                    }
                }).data('gridster');

                gridsters.push(gridsternew);

                bindNavLink();
                bindPanelEdit();
                bindSavePanel();

                $('#tabname').val('');

                $('.btn-close').trigger('click');

                $('.nav-link').trigger('click');

            });

            $('.btn-reset').on('click', function () {

                localStorage.removeItem('positions_backend');
                location.reload();
            });

            bindPanelEdit();
            btnZoneEdit();
            btnZoneAdd();
            bindSavePanel();
        });
    </script>


}
